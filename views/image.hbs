<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{image.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{image.name}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{image.desc}}</p>
        <div class="text-center">

            <img src="../public/upload/{{image.filename}}" class="img-fluid">

        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{image.name}}">
            <i class="fas fa-thumbs-up"></i>
        </button>
        <p>
            <span class="likes-count">{{image.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"></i> {{image.views}}
        </p>
        <p>
            <i class="fas fa-clock"></i> {{timeago image.timeStamp}}
        </p>
    </div>
</div>

<div class="card mt-2 bg-dark text-white">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title">Comments</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comments-o"></i> Post a Comment
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/pin/{{image.name}}/comment" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control bg-dark text-light border mt-2" name="name"
                        placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control bg-dark text-light border mt-2" name="email"
                        placeholder="Email" required>
                </div>
                <div class="form-group">
                    <textarea name="comment" class="form-control bg-dark text-light border mt-2" rows="2"
                        placeholder="Your Comment" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-light mt-3" id="btn-comment">
                        <i class="fa fa-comment"></i> Post
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comment}}
            <li class="list-group-item">
                <div class="row">
                    <a href="#" class="col text-center">
                        <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" />
                    </a>
                    <blockquote class="col">
                        <p class="lead">{{comment}}</p>
                        <footer class="blockquote-footer">
                         {{name}}-{{timeago timeStamp}}
                        </footer>
                    </blockquote>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>